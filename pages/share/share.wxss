.container{
  padding-bottom: 80rpx;
  background-color: #fff;
}

.content-view.hide{
  display: none;
}

.time-view{
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 50rpx;
  padding-left: 30rpx;
  font-weight: bold;
  color: #fff;
  padding-top: 30rpx;
}

.save-view{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  color: #fff;
  background-color: rgb(8, 74, 132);
  font-size: 34rpx;
  text-align: center;
}

.qr-view{
  padding-bottom: 90rpx;
  text-align: center;
}

.qr-icon{
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.canvas{
  position: absolute;
  left: 0;
  top: 0;
  background-color:#fff;
}

/* 列表样式 */
.list-view {
  padding: 60rpx 30rpx 30rpx;
  font-size: 0;
  background-color: #fff;
}

.list-banner {
  margin-bottom: 60rpx;
}

.list-banner:last-child{
  border-bottom: none;
}

.list-banner .list-title{
  font-size: 30rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.list-banner .list-detail{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.list-banner .list-text{
  font-size: 30rpx;
  width: 650rpx;
  line-height: 2;
}

.dot{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #333;
  border-radius: 50%;
  margin-top: 22rpx;
}