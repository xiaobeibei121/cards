.list-view {
  padding: 60rpx 30rpx 30rpx;
  font-size: 0;
  background-color: #fff;
}

.list-banner {
  margin-bottom: 60rpx;
}

.list-banner:last-child{
  border-bottom: none;
}

.list-banner .list-title{
  font-size: 30rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.list-banner .list-detail{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.list-banner .list-text{
  font-size: 30rpx;
  width: 650rpx;
  line-height: 2;
}

.dot{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #333;
  border-radius: 50%;
  margin-top: 22rpx;
}