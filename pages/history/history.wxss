/* pages/history/history.wxss */
.container{
  padding: 80rpx 0 0;
}
.nav-banner{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 9;
  background-color: #f0f0f0;
}

.scroll-view_H{
  height: 100rpx;
  font-size: 0;
  overflow:hidden;
  white-space:nowrap;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.nav-title{
  padding: 0 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  display: inline-block;
  border-radius: 30rpx;
  background-color: #fff;
  margin-top: 25rpx;
  margin-right: 30rpx;
}

.nav-title:nth-child(1){
  margin-left: 30rpx;
}

.nav-title.active{
  font-weight: bold;
  color: #fff;
  background-color: #666;
}

.time-view{
  height: 140rpx;
  line-height: 140rpx;
  background-color: #f0f0f0;
  font-size: 60rpx;
  padding-left: 30rpx;
  color: #666;
}

.no-data{
  background-color: #fff;
  height: 200rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  padding-top: 160rpx;
}

.home-view{
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.home-icon{
  width: 60rpx;
  height: 60rpx;
}

.home-view.hide{
  display: none;
}